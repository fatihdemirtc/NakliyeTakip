<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NakliyeTakip.MAUI.Pages.HomePage"
             Title="Ana Sayfa"
             BackgroundColor="#F5F5F5">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <VerticalStackLayout Spacing="5" HorizontalOptions="Center">
                <Label Text="Hos Geldiniz!"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Primary}"
                       HorizontalOptions="Center"/>

                <Label x:Name="WelcomeLabel"
                       Text="Basariyla giris yaptiniz."
                       FontSize="16"
                       TextColor="Gray"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <BoxView HeightRequest="1" Color="#E0E0E0" Margin="10,0"/>

            <Border StrokeShape="RoundRectangle 10"
                    Stroke="#E0E0E0"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    Padding="15">

                <VerticalStackLayout Spacing="10">
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Oturum Anahtari (Token)"
                               FontSize="14"
                               FontAttributes="Bold"
                               TextColor="#333"
                               VerticalOptions="Center"/>

                        <Label Text="Kopyala"
                               Grid.Column="1"
                               FontSize="12"
                               TextColor="{StaticResource Primary}"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCopyTokenClicked"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </Grid>

                    <Label x:Name="TokenLabel"
                           Text="Token yukleniyor..."
                           FontSize="11"
                           FontFamily="Monospace"
                           TextColor="#555"
                           MaxLines="3"
                           LineBreakMode="TailTruncation"/>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Spacing="15" Margin="0,20,0,0">

                <Button Text="Token'i Yenile"
                        Clicked="OnRefreshTokenClicked"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="50"
                        FontAttributes="Bold"/>

                <Button Text="Konum Gönder"
        Clicked="OnSendLocationClicked"
        BackgroundColor="{StaticResource Primary}"
        TextColor="White"
        CornerRadius="8"
        HeightRequest="50"
        FontAttributes="Bold"/>

                <Button Text="Konum Getir"
Clicked="OnGetLocationClicked"
BackgroundColor="{StaticResource Primary}"
TextColor="White"
CornerRadius="8"
HeightRequest="50"
FontAttributes="Bold"/>

                <Button Text="Guvenli Cikis"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="#FFEBEE"
                        TextColor="#D32F2F"
                        BorderColor="#D32F2F"
                        BorderWidth="1"
                        CornerRadius="8"
                        HeightRequest="50"
                        FontAttributes="Bold"/>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
