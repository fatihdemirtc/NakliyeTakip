<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NakliyeTakip.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:NakliyeTakip.MAUI.Pages"
    Title="NakliyeTakip.MAUI">

    <!-- Login Page (Ana giriş sayfası) -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="login" />

    <!-- Main Page (Ana sayfa - authenticated) -->
    <ShellContent
        Title="Ana Sayfa"
        ContentTemplate="{DataTemplate pages:HomePage}"
        Route="main" />

</Shell>
